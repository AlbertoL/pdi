border-gris = #cccccc
blanco = #FFFFFF
azul-fondo = #022E5B

@font-face {
    font-family: 'ubuntu';
    src: url('../fonts/ubuntu-r-webfont.eot');
    src: url('../fonts/ubuntu-r-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/ubuntu-r-webfont.woff2') format('woff2'),
         url('../fonts/ubuntu-r-webfont.woff') format('woff'),
         url('../fonts/ubuntu-r-webfont.ttf') format('truetype'),
         url('../fonts/ubuntu-r-webfont.svg#ubunturegular') format('svg');
    font-weight: normal;
    font-style: normal;

}

body
	background azul-fondo
	font-family 'Arial', 'Helvetica', 'sans-serif'
	font-size 16px

input
	border solid 1px border-gris
	border-radius 5px
	display block
	font-size 16px
	height 20px
	margin 5px 0px
	padding 7px
	width 95%
		
.content
	width 100%
	.cont_form
		background blanco
		border 1px #e0e0e0 solid
		border-radius 5px
		margin 80px auto 0px auto
		min-width 230px
		max-width 300px
		padding 10px 30px
		height auto
		.cl_comment
			width 96%
			border-radius 5px
			border 1px solid #e0e0e0
			padding 5px
		.logo
			background-image url(../img/pdi-logo.jpg)
			background-position: center center
			background-repeat: no-repeat
			background-size contain
			height 125px	
		.entrar
			background #4090DB
			border none
			color blanco
			cursor pointer
			font-size 16px
			height auto
			margin 10px auto
			min-width 229px
			padding 5px
			width 100%
			&:hover
				background azul-fondo
		.error
			color red
			font-size 12px
		.title_contacto
			text-align center
			font-family 'ubuntu'
			color azul-fondo
		#retorno_d_Unidad
			#d_unidad	
				.categoria	
					-moz-appearance none
					-ms-appearance none
					-webkit-appearance none
					appearance none
					background transparent
					background-image url(../img/icon-down.png)
					background-position 98% 50%
					background-repeat no-repeat
					background-size 16px
					border 1px solid border-gris
					border-radius 3px
					cursor pointer
					min-width 235px
					padding 5px
					width 100%
					option
						border-bottom 1px solid #f4f4f4
		#msgUsuario
			color red
			font-size 12px
		a 
			color #105379
			font-size 12px
			text-decoration none

@media screen and (min-width: 300px)
	.cont_form
		width 70%
	