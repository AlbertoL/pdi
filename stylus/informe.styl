         url('../fonts/ubuntu-r-webfont.svg#ubunturegular') format('svg');
    font-weight: normal;
    font-style: normal;

}

body
	background azul-fondo
	font-family 'ubuntu', 'Helvetica', 'sans-serif'
	height auto
	font-size 16px
	margin 0
.content_global
	background url(../img/pattpdi2.png)
	margin 0 auto
	max-width 1400px
	min-width 300px
	min-height 700px
	width 100%
	position absolute
h1
	color azul-fondo
header
	background blanco
	border-bottom 1px solid #cccccc
	height auto
	width 100%
	nav
		height auto
		margin 0 auto
		font-size 0
		padding 5px
		.cont_menu
			border-radius 3px
			vertical-align top
			ul
				display table
				background #F8F8F8
				border 1px solid #e5e5e5
				border-radius 3px
				height 30px
				list-style none
				padding 0
				li
					display table-cell
					text-align center
					a
						color #2D2D2D
						border-bottom 2px solid #F8F8F8
						display block
						font-size 16px
						padding 10px
						text-decoration none
						&:hover
							border-bottom 2px solid #01295C
							color #01295C
					.menu_inicio
						font-weight bold
						&:before
							font-family "icon"
							content "\e902"
						&:after
							font-family "icon"
					.menu_hva
						&:after
							font-family "icon"
							content "\e903"
					.menu_alert
						&:after
							font-family "icon"
							content "\e901"
					.menu_close
						color #59be5d
						&:after
							font-family "icon"
							content "\e900"
						&:hover
							border-bottom 2px solid #f0040c
							color #f0040c

		.logo
			img
				width 100%
