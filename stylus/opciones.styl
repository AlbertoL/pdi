@media screen and (min-width: 1000px)
  nav
    width 77%
    display table
    height 120px
    div
      display table-cell
    .cont_menu
      height 120px
      position relative
      margin-top 0
      right 0
      ul
        bottom 30px
        position absolute
        right 0px
        width 30%
    .logo
      width 10%
  .body_content
    width 75%
    
